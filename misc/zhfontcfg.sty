%设置文档正文字体为宋体
\setCJKmainfont[BoldFont=\fontnamesong]{\fontnamesong}
\setCJKsansfont[BoldFont=\fontnamehei]{\fontnamehei}
\setCJKmonofont{\fontnamemono}

%楷体
\setCJKfamilyfont{KAI}{\fontnamekai}
\newcommand{\kai}[1]{{\CJKfamily{KAI}#1}}
\newcommand{\kkai}{\CJKfamily{KAI}}

%黑体
\setCJKfamilyfont{HEI}{\fontnamehei}
\newcommand{\hei}[1]{{\CJKfamily{HEI}#1}}
\newcommand{\hhei}{\CJKfamily{HEI}}

%宋体
\setCJKfamilyfont{SONG}{\fontnamesong}
\newcommand{\song}[1]{{\CJKfamily{SONG}#1}}
\newcommand{\ssong}{\CJKfamily{SONG}}

%行楷
\setCJKfamilyfont{XINGKAI}{\fontnamexingkai}
\newcommand{\xingkai}[1]{{\CJKfamily{XINGKAI}#1}}
\newcommand{\xxingkai}{\CJKfamily{XINGKAI}}

%英文
\newfontfamily\ENF{\fontnameroman}
\newcommand{\en}[1]{\,{\ENF#1}\,}
